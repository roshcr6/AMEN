# =============================================================================
# AMEN - Agentic Manipulation Engine Neutralizer
# Environment Configuration Template
# =============================================================================

# -----------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------

# Sepolia RPC URL (Get from Alchemy, Infura, or other providers)
# Example: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Chain ID for Sepolia
CHAIN_ID=11155111

# Block explorer for verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# -----------------------------------------------------------------------------
# WALLET KEYS (⚠️ NEVER COMMIT REAL KEYS)
# -----------------------------------------------------------------------------

# Deployer wallet private key (for contract deployment)
# Must have Sepolia ETH for gas
DEPLOYER_PRIVATE_KEY=0x_your_deployer_private_key_here

# Agent wallet private key (for emergency actions)
# This wallet will call pause() and other protective functions
AGENT_PRIVATE_KEY=0x_your_agent_private_key_here

# Attacker wallet private key (for simulation only)
ATTACKER_PRIVATE_KEY=0x_your_attacker_private_key_here

# -----------------------------------------------------------------------------
# CONTRACT ADDRESSES (Filled after deployment)
# -----------------------------------------------------------------------------

# Token contracts
WETH_ADDRESS=
USDC_ADDRESS=

# Core protocol contracts
AMM_POOL_ADDRESS=
ORACLE_ADDRESS=
LENDING_VAULT_ADDRESS=

# -----------------------------------------------------------------------------
# AI AGENT CONFIGURATION
# -----------------------------------------------------------------------------

# Google Gemini API Key
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use
GEMINI_MODEL=gemini-1.5-pro

# Agent monitoring interval (seconds)
AGENT_POLL_INTERVAL=12

# Price deviation threshold for alert (percentage as decimal)
PRICE_DEVIATION_THRESHOLD=0.05

# Confidence threshold for emergency pause
PAUSE_CONFIDENCE_THRESHOLD=0.75

# -----------------------------------------------------------------------------
# BACKEND CONFIGURATION
# -----------------------------------------------------------------------------

# Backend API URL
BACKEND_URL=http://localhost:8000

# Database configuration (SQLite for dev, PostgreSQL for prod)
DATABASE_URL=sqlite:///./amen_security.db

# API authentication (generate with: openssl rand -hex 32)
API_SECRET_KEY=your_random_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------

# API endpoint for frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# RPC URL for frontend (read-only, can be public)
VITE_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# -----------------------------------------------------------------------------
# GOOGLE CLOUD DEPLOYMENT (Optional)
# -----------------------------------------------------------------------------

# GCP Project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCP Region
GCP_REGION=us-central1

# Cloud Run service names
AGENT_SERVICE_NAME=amen-agent
BACKEND_SERVICE_NAME=amen-backend

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable detailed transaction logging
ENABLE_TX_LOGGING=true

# Webhook for alerts (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=
