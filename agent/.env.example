# =============================================================================
# AMEN Agent Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
CHAIN_ID=11155111

# =============================================================================
# WALLET (Agent wallet that executes protection actions)
# =============================================================================
AGENT_PRIVATE_KEY=your_agent_wallet_private_key_here

# =============================================================================
# CONTRACT ADDRESSES (Fill these after deploying contracts)
# =============================================================================
WETH_ADDRESS=
USDC_ADDRESS=
ORACLE_ADDRESS=
AMM_POOL_ADDRESS=
LENDING_VAULT_ADDRESS=

# =============================================================================
# AI CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# =============================================================================
# AGENT BEHAVIOR (Optional - these have defaults)
# =============================================================================
POLL_INTERVAL=12
PRICE_DEVIATION_THRESHOLD=0.05
PAUSE_CONFIDENCE_THRESHOLD=0.75
BLOCK_LIQUIDATION_THRESHOLD=0.60
PRICE_HISTORY_WINDOW=20

# =============================================================================
# BACKEND CONNECTION
# =============================================================================
BACKEND_URL=http://localhost:8000
